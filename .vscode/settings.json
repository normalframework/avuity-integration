{
  "search.exclude": {
    "**/dist": true,
    "src/proto": true
  },
  "debug.javascript.autoAttachFilter": "smart",
  "json.schemas": [
    {
      "fileMatch": ["/*.hook.json"],
      "url": "./node_modules/@normalframework/applications-sdk/dist/hook-schema.json"
    },
    {
      "fileMatch": ["app.json"],
      "url": "./node_modules/@normalframework/applications-sdk/dist/application-schema.json"
    },
    {
      "fileMatch": ["hooks-update/*.json"],
      "url": "./node_modules/@normalframework/applications-sdk/dist/update-hook-schema.json"
    }
  ]
}
